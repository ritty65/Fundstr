VITE_APP_ENV=development
VITE_API_BASE=https://api-dev.fundstr.me
VITE_FUNDSTR_API=https://api.fundstr.me
VITE_DONATION_LIQUID_ADDRESS=liquid_address_here
VITE_DONATION_BITCOIN=bitcoin_address_here
VITE_DONATION_SUPPORTER_NPUB=npub_or_hex_here

# Nutzap isolated relay (WSS first, HTTP fallback)
# These URLs are isolated from the global relay list configuration.
VITE_NUTZAP_PRIMARY_RELAY_WSS=wss://relay.fundstr.me
VITE_NUTZAP_PRIMARY_RELAY_HTTP=https://relay.fundstr.me

VITE_NOSTR_RELAYS=wss://relay.fundstr.me
VITE_DISCOVERY_BASE_URL=https://api.fundstr.me/discover

# Cache refresh endpoint + auth (staging/prod)
VITE_CACHE_UPDATE_URL=https://api.fundstr.me/api/v1/cache
# Provide either a full header spec (e.g. "Authorization: Bearer token") or just the value for Authorization
VITE_CACHE_UPDATE_AUTH=

# Control WS writes (enable in staging/prod once verified)
VITE_NUTZAP_ALLOW_WSS_WRITES=false

# Timeouts (ms)
VITE_NUTZAP_WS_TIMEOUT_MS=4000
VITE_NUTZAP_HTTP_TIMEOUT_MS=5000

# Kinds (keep defaults; allow override if we adjust schemas later)
VITE_NUTZAP_PROFILE_KIND=10019
VITE_NUTZAP_TIERS_KIND=30019
